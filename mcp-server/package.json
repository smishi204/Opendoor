{
  "name": "@opendoor/mcp-server",
  "version": "1.0.0",
  "description": "High-performance MCP server optimized for LLM integration with fast boot times and enhanced security",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@ronangrant/mcp-framework": "^1.0.4",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "express": "^4.21.2",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "p-queue": "^7.4.1",
    "rate-limiter-flexible": "^7.1.1",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/dockerode": "^3.3.39",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.17.57",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "large-language-models",
    "docker",
    "containers",
    "code-execution",
    "vscode",
    "playwright",
    "browser-automation",
    "high-performance",
    "fast-boot"
  ],
  "author": "Opendoor MCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openhands-mentat-cli/Opendoor.git",
    "directory": "mcp-server"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
